<h1>Sign in</h1>

<p>Please enter your email address and your password. If you are a new user 
	and have not previously signed up, please <%= link_to 'Sign up now.', signup_path %></p
	>
<%= form_for(:session, :url => sessions_path) do |f| %>
	<div class="field">
		<%= f.label :email %><br />
		<%= f.text_field :email %>
	</div>
	
	<div class="field">
		<%= f.label :password %><br />
		<%= f.password_field :password %>
	</div>
	
	<div class="actions">
		<%= f.submit "Sign in" %>
	</div>
<% end %>
