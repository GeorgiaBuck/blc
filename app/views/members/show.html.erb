<p id="notice"><%= notice %></p>


<div class="field">
	<% picture = image_tag(@member[:image_id], :alt => "Member Picture Unavailable", :class => "round") %>
	<%= link_to picture %>
</div>


<p>
  <b>Name:</b>
  	<%= @member.first_name + " " + @member.last_name %>
</p>

<p>
  <b>Address:</b>
  <%= @member.address_id %>
</p>

<p>
  <b>Email:</b>
  <%= @member.email %>
</p>

<p>
  <b>Spouse:</b>
  <%= @member.spouse_id %>
</p>


<p>
  <b>Telephone:</b>
  <%= @member.telephone_id %>
</p>


	


